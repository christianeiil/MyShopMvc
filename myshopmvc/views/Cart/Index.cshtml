@model IEnumerable<MyShopMVC.Models.OrderDetailsModel>

@{
    ViewBag.Title = "My Shopping Cart";
}

<h2>My Shopping Cart</h2>

<div class="col-lg-9">
    <table class="table">
        <tr>
            <th colspan="2">
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Amount
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="../images/products/@item.ProductImage"
                         width="200" />
                </td>
                <td>
                    @item.ProductName
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td></td>
            </tr>
        }

    </table>
</div>
<div class="col-lg-3">
    <div class="well">
        <h3 class="text-center">Order Summary</h3>
        <table class="table table-hover">
            <tr>
                <td>Gross Amount</td>
                <td>@ViewBag.GrossAmount</td>
            </tr>
            <tr>
                <td>VAT (12%)</td>
                <td>@ViewBag.VAT</td>
            </tr>
            <tr>
                <td>Total Amount</td>
                <td>@ViewBag.TotalAmount</td>
            </tr>
        </table>
        <hr />
        <a href="@Url.Action("Index", "Checkout")" class="btn btn-success btn-block btn-lg">
            Checkout
        </a>
    </div>
</div>