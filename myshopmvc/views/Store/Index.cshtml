@model MyShopMVC.Models.StoreViewModel

@{
    ViewBag.Title = "Store";
}

<h2 class="text-center">My Store</h2>
<hr/>
    <div class="col-lg-3">
        <div class="well">
            <div class="list-group">
                <a href="#" class="list-group-item">All Categories
                <span class="badge">0</span></a>
                @foreach (var item in Model.AllCategories)
                {
                    <a href="?c=@item.CatID" class="list-group-item">
                        @item.Category
                        <span class="badge">@item.TotalCount
                        </span>
                        </a>
                        }
</div>
        </div>
    </div>

    <div class="col-lg-9">
        @foreach (var item in Model.AllProducts)
        {
            <div class="col-lg-4">
                <a href="@Url.Action("Details", "Store", new {item.ID})"
                   style="text-decoration: none;">

                    <div class="thumbnail">
                        <img src="../Images/Products/@item.Image" class="img-responsive"/>
                        <div class="caption">
                            <h3 class="text-center">@item.Name</h3>
                            <p>
                                @item.Category<br />
                                <h4>Php @item.Price.ToString("#,##0.00")</h4>
                                <hr />
                                <a href="@Url.Action("Add", "Cart", new { item.ID})" class="btn btn-block btn-success">
                                    Add to Cart
                                </a>
                            </p>
                        </div>
                    </div>



                    </a>
               
            </div>
        }
    </div>


